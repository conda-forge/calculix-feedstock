AR ?= ar
FC ?= gfortran
CC ?= gcc
CFLAGS += -Wall -O3 -fopenmp -I $(SPOOLES_INCLUDE_DIR) -DARCH="Linux" -DSPOOLES -DARPACK -DMATRIXSTORAGE -DUSE_MT=1
FFLAGS += -Wall -O3 -fopenmp

.c.o :
	$(CC) $(CFLAGS) -c $<
.f.o :
	$(FC) $(FFLAGS) -c $<

include Makefile.inc

SCCXMAIN = ccx_$(VERSION).c

OCCXF = $(SCCXF:.f=.o)
OCCXC = $(SCCXC:.c=.o)
OCCXMAIN = $(SCCXMAIN:.c=.o)

LIBS = \
    $(LIB_DIR)/libarpack.a \
    $(LIB_DIR)/spoolesMT.a \
    $(LIB_DIR)/spooles.a \
    $(LIB_DIR)/libopenblas.a

ccx_$(VERSION)_MT: $(OCCXMAIN) ccx_$(VERSION)_MT.a  $(LIBS)
	./date.pl; $(CC) $(CFLAGS) -c ccx_$(VERSION).c; $(FC) $(FFLAGS) -o $@ $(OCCXMAIN) ccx_$(VERSION)_MT.a $(LIBS)

ccx_$(VERSION)_MT.a: $(OCCXF) $(OCCXC)
	$(AR) vr $@ $?
